#include<stdio.h>
int main(){
    int altura;
    int a, b, c;
    printf("digite seu genero \n 1 - Feminino: \n 2 - Masculino: \n ");
    scanf("%d", &altura);
    switch(altura){
    case 1:
    printf("Digite seu peso: ");
    scanf("%d", &a);
    c = (62.1 * altura) - 44.7;
    printf("Seu peso ideal é:%d", c);
    break;
    case 2:
    printf("Digite sua altura: ");
    scanf("%d", &b);
    c = (72.7 * altura) - 58;
    printf(" Seu peso ideal é:%d", c);
    break;
    }
   return 0;
}
